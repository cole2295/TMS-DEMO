@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>ShowTree</title>
    <script type="text/javascript" src="@Url.Content("~/Scripts/lib/jquery-1.7.1.min.js")"></script>
    <style type="text/css">
		@@import "@Url.Content("~/Scripts/plugins/tree/tree.css")";
    </style>
    <style type="text/css">
        body, #container
        {
            margin: 0;
            padding: 0;
        }
        #tree, #search
        {
            overflow-x: hidden;
            overflow-y: auto;
        }
        #loading
        {
            width: 30px;
            display: none;
            top: 160px;
            left: 150px;
            position: relative;
            z-index: 10001;
        }
    </style>
    <script type="text/javascript">
        function Search() {
            var stationName = $("#StationName").val();
            jtree.load({
                    render: "tree",
                    url: "/Tree/GetChildData?StationName=" + escape(stationName),
                    showcheck: false,
                    theme: "bbit-tree-lines"
                });
        }
    </script>
</head>
<body>
    <div id="container">
        <div id="search" style="overflow: auto;">
            <input type="text" class="textbox search" watermark="请输入站点名称搜索" 
            width="320" id="StationName" name="StationName" onkeypress="if (event.keyCode == 13) Search();"/>
        </div>
        <div id="tree">
        </div>
        <div id="loading">
            <img src="@Url.Content("~/content/images/icons/loading.gif")"/>
        </div>
    </div>
    <script type="text/javascript" src="@Url.Content("~/Scripts/plugins/ymPrompt/ymPrompt_Ex.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/plugins/calendar/WdatePicker.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/plugins/textbox/jquery.textbox.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/plugins/textbox/jquery.watermark.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/plugins/tooltip/jquery.tooltip.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/extends/url.extend.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/plugins/tree/jquery.tree.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/common/tms.util.js")"></script>
    <script type="text/javascript">
        $(function () {
            jtree.load({
                render: "tree",
                url: "/Tree/GetChildData",
                showcheck: false,
                theme: "bbit-tree-lines"
            });
        })
    </script>
</body>
</html>
