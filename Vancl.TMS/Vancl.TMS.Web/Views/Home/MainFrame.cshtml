        <ul class="main_1navs com_fl1">
            @if (Model != null)
            {
                foreach (var menu in Model.Where(x => x.MenuLevel == 0).OrderBy(x => x.MainMenuSeqNo))
                {
                <li><a href="javascript:void(0)" data-id="@menu.ID">@menu.Name</a></li>
                }
            }
        </ul>
    </div>
    <!-- 2级导航   -->
