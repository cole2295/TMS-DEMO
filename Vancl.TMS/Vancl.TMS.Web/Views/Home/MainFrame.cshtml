    <script type="text/javascript">
        var PageSearchConditions=[];
        function logout() {
            var url = "@Url.Action("Logout")";
            ymPrompt.confirmInfo('你确认要退出系统？',  null, null, "询问",
            function(tp, data) {
                if (tp == "ok") {
                    window.location = url;
                }
            });
        }
    </script>
