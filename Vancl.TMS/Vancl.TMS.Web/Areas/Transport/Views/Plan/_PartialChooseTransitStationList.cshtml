@model List<Vancl.TMS.Model.Transport.Plan.ViewTansportEditorModel> 
<div class="box">
    <div class="box_title">
        <h1 class="l">
            选择中转站</h1>
    </div>
    <div class="search_condition">
        @using (Html.BeginForm("ChooseLine"))
        {
            <input id="btnSearch" type="submit" value="下一步" class="button" />
        }
    </div>
    <div id="DataList" class="DataGirdPanel">
        <table cellpadding="0" cellspacing="0" border="0" class="DataTable" id="DataTables1">
            <thead>
                <tr>
                    <th class="CbxColumn">
                        <input type="checkbox" class="CheckAll" />
                    </th>
                    <th>
                        出发地
                    </th>
                    <th>
                        目的地
                    </th>
                    <th>
                        货物类型
                    </th>
                    <th>
                        是否中转
                    </th>
                    <th>
                        截止日期
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    if (Model.Count == 0)
                    {
                        Html.RenderPartial("_PartialDataTableEmptyRow", Model);
                    }
                    else
                    {
                        for (int i = 0; i < Model.Count; i++)
                        {
                            var item = Model[i];
                    <tr class="@(i % 2 == 0 ? "odd" : "even")">
                        <td class="center">
                            1
                        </td>
                        <td class="center">
                            2
                        </td>
                        <td class="center">
                            3
                        </td>
                        <td class="center">
                            4
                        </td>
                        <td class="center">
                            5
                        </td>
                        <td class="center">
                            6
                        </td>
                    </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>
