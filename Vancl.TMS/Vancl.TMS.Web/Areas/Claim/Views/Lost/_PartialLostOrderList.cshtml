@using Vancl.TMS.Model.Common
@using Vancl.TMS.Util.EnumUtil
@model IList<Vancl.TMS.Model.Claim.Lost.ViewLostOrderModel>
<div class="toolbar">
    <ul >
        <li class="toolbtn"><a class="ok" href="javascript:SaveLostOrder();" id="btnOK">确定</a></li>
    </ul>
</div>
<div class="tablelist">
<table cellpadding="0" cellspacing="0" border="0" class="DataTable center" id="LinePlanTable" style="min-width:0;">
    <thead>
        <tr>
            <th class="CbxColumn">
                <input type="checkbox" class="CheckAll" />
            </th>
            <th>
                单号
            </th>
            <th>
                货值
            </th>
            <th>
                箱号
            </th>
        </tr>
    </thead>
    <tbody>
       @{
            if (Model.Count == 0)
            {
                Html.RenderPartial("_PartialDataTableEmptyRow", Model);
            }
            else
            {
                for (int i = 0; i < Model.Count; i++)
                {
                    var orderModel = Model[i];
            <tr class="@(i%2==0?"odd":"even")">
                <td class="CbxColumn">
                    <input type="checkbox" />
                    @*<input type="hidden" value="@delayModel.DelayID" />*@
                </td>
                <td>
                    @orderModel.FormCode
                </td>
                <td>
                    @orderModel.Price.ToString("f2")
                </td>
                <td>
                    @orderModel.CustomerBoxNo
                </td>
            </tr>
                }
            }
        }
    </tbody>
</table>
</div>
