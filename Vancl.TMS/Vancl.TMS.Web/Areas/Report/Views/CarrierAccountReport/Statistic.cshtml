@model Vancl.TMS.Model.Report.CarrierAccountReport.ViewCarrierAccountReportStatisticsModel
@{
    Layout = null;
}
<table cellpadding="0" cellspacing="0" border="0" class="tb_insert Fixed">
    <tr>
        <th>
            订单数量
        </th>
        <td>
            @Model.OrderCount.ToString()
        </td>
        <th>
            总重量
        </th>
        <td>@Model.TotalWeight.ToString("f2")
        </td>
        <th>
            基础运费
        </th>
        <td>@Model.BaseAmount.ToString("f2")
        </td>
        <th>
            保价费
        </th>
        <td>@Model.ProtectedPrice.ToString("f2")
        </td>
    </tr>
    <tr>
        <th>
            运费补足
        </th>
        <td>@Model.ComplementAmount.ToString("f2")
        </td>
        <th>
            送货费
        </th>
        <td>
            @Model.LongDeliveryAmount.ToString("f2")
        </td>
        <th>
            提货费用
        </th>
        <td>@Model.LongPickPrice.ToString("f2")
        </td>
        <th>
            应付运费
        </th>
        <td>@Model.NeedAmount.ToString("f2")
        </td>
    </tr>
    <tr>
        <th>
            KPI考核
        </th>
        <td>@(Model.KPIAmount.HasValue ? Model.KPIAmount.Value.ToString("f2") : "")
        </td>
        <th>
            丢失赔付
        </th>
        <td>@Model.LostDeduction.ToString("f2")
        </td>
        <th>
            其他
        </th>
        <td>@Model.OtherAmount.ToString("f2")
        </td>
        <th>
            实际支付运输费
        </th>
        <td>@Model.ConfirmedAmount.ToString("f2")
        </td>
    </tr>
</table>
