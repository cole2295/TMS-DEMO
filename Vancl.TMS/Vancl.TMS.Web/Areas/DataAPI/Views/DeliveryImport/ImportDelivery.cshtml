@{
    ViewBag.Title = "提货单录入";
    Layout = "~/Views/Shared/_Layout_Frame.cshtml";
}
@section header{
    <script type="text/javascript">
        $(function(){
            @if (ViewBag.IsOK != null && ViewBag.IsOK)
            {
                @:ymPrompt.doHandler("OK", true,"@ViewBag.AlertMsg")
            }
            else if (ViewBag.IsOK != null && !ViewBag.IsOK)
            {
                @:ymPrompt.doHandler("Cancel", true,"@ViewBag.AlertMsg")
            }    
        });

        function checkfile() {
           if(document.getElementById("input_file").value=="")
           {
                alert("请选择一个文件");
                return false;
           }
           $("#Loading").show();
           return true;
        }
    </script>
}
<div class="search_condition" id="divSearchCondition">
    @using (Html.BeginForm("Import", "DeliveryImport", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <table class="tb_insert Fixed">
            <tr>
                <td>
                    <a href="../../files/DeliveryImport/DeliveryImportTemplate/提货单导入模版.xlsx">下载模版</a>
                </td>
                <th>
                    选择文件
                </th>
                <td style="width: 250px">
                    <input type="file" id="input_file" name="input_file" />
                </td>
                <td style="padding-right: 20px">
                    <input id="btnImport" type="submit" name="btnImport" value="导入" class="button" onclick="return checkfile();" />
                </td>
            </tr>
        </table>
    }
</div>
