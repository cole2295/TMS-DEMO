@model Vancl.TMS.Model.Sorting.Inbound.Packing.SortingPackingPrintModel
@{
    ViewBag.Title = "装箱打印";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section header
{
    <style type="text/css" media="print">
        .print
        {
            display: inline-block !important;
        }
        .noprint
        {
            display: none;
        }
        #PrintDeliverNo
        {
            width: 100%;
        }
        .itemSplit
        {
            border: 0 !important;
        }
        .pageBreak
        {
            page-break-after: always;
        }
    </style>
    <style type="text/css">
        html, body
        {
            font-size: 20px;
            margin1: 0 5px;
            padding: 0;
        }
        .container
        {
            margin: 10px;
        }
        #PrintSubmit
        {
            position: fixed;
            z-index: 2;
            right: 0;
            bottom: 0;
            padding: 5px;
            background: #ddd;
        }
        .BarCode
        {
            font-size: 20px;
        }
        
        h1.title
        {
            text-align: center;
            font-size: 30px;
            margin: 10px 0;
        }
        .tbOutTime
        {
            width: 100%;
            font-size: 20px;
        }
        .tbOrderCount
        {
            width: 100%;
            border: 1px solid #000;
            border-collapse: collapse;
            table-layout: fixed;
        }
        .tbOrderCount th
        {
            border: 1px solid #000;
            text-align: center;
            line-height: 25px;
            font-weight: normal;
        }
        .tbOrderCount td
        {
            border: 1px solid #000;
            text-align: center;
            line-height: 25px;
            font-weight: bold;
        }
        .tbSign
        {
            width: 100%;
            font-size: 16px;
            line-height: 28px;
        }
        .tbSign th
        {
            text-align: right;
        }
        .itemSplit
        {
            background: gray;
            height: 3px;
            margin: 20px 0;
        }
    </style>
    <script src="@Url.Content("~/Scripts/references/jquery-barcode-2.0.2.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $(".BarCode,.BcTarget").each(function () {
                var BoxNo = $(this).attr("boxNo");
                $(this).barcode(BoxNo, "code128", { barWidth: 1, barHeight: 40, fontSize: 15 });
            });
            this.focus();
        });
    </script>
}
<div>
    @{
        if (Model != null)
        { 
        <table class="tbOutTime">
            <tr>
                <td colspan="2">
                    <div style="float: left;">
                        <div class="BarCode" boxNo="@Model.BoxNo">
                        </div>
                    </div>
                    <div style="float: right; height: 60px; width: auto; font-weight: bold; font-size: 40pt; vertical-align: text-top; margin-top: -6px; margin-right: 10px;">@Model.TheN</div>
                </td>
            </tr>
        </table>
        <table class="tbOrderCount">
            <tr>
                <th>
                    目的地
                </th>
                <td>@Model.ArrivalName
                </td>
            </tr>
            <tr>
                <th>
                    重量KG
                </th>
                <td>
                    @Model.TotalWeight.ToString("f3")
                </td>
            </tr>
            <tr>
                <th>
                    运单数量
                </th>
                <td>
                    @Model.BillCount
                </td>
            </tr>
            <tr>
                <th>
                    发货地
                </th>
                <td>@Model.DepartureName
                </td>
            </tr>
            <tr>
                <th>
                    发货日期：
                </th>
                <td>@Model.DepartureTime.ToString("yyyy/MM/dd")
                </td>
            </tr>
            <tr>
                <th>
                    装箱人
                </th>
                <td>
                    @Model.PackingOpUser
                </td>
            </tr>
            <tr>
                <th colspan="2">
                    @Model.DistributionName
                </th>
            </tr>
        </table>
        }
        else
        { 
        @("箱号不存在，无相关打印信息")
        }
    }
</div>
<div class="center noprint" id="PrintSubmit">
    <input type="submit" class="button noprint center" value="装箱打印" onclick="window.print();" />
    <div class="noprint" style="font-size: 12px; color: #DD940A; width: 204px; clear: both;
        text-align: left; padding-top: 3px">
        注：如果需要打印网页时不显示页眉页脚,请设置IE的"文件"菜单->页面设置",把"页眉"和"页脚"栏中的内容设置为空!
    </div>
</div>
