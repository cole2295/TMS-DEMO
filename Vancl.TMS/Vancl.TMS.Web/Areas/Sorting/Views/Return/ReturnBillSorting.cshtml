@using Vancl.TMS.Model.BaseInfo;
@model Object
@{
    ViewBag.Title = "返货入库";
    Layout = "~/Views/Shared/_Layout_Frame.cshtml";
    Layout = "~/Views/Shared/_Layout_SearchList.cshtml";
}
@section head{
    <script src="@Url.Content("~/Scripts/references/jQuery.tmpl.min.js")  " type="text/javascript"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/pages/Sorting/ReturnBillSorting.js?" + DateTime.Now.ToString("yyyyMMddHHmmss"))"></script>
     <script id="tmpSimpleList" type="text/html">
			<tr id="${FormCode}">
		    <td>
			    ${BillReturnInfoId}
		    </td>
		    <td>
			    ${FormCode}
		    </td>
		    <td>
			    ${BillSource}
		    </td>
		    <td>
		        ${MerchantName}
		    </td>
            <td >
		        ${BillType}
		    </td>
            <td>
		        ${StatusName}
		    </td>
            <td >
		        ${NeedAmount}
		    </td>
            <td>
		        ${NeedBackAmount}
		    </td>
            <td >
		        ${LabelNo}
		    </td>
            <td>
		        ${BoxNo}
		    </td>
	    </tr>
    </script>
    <style type="text/css">
        .tb_insert tr th
        {
            width: 130px;
            text-align: right;
        }
        .cur
        {
            font-size: large !important;
            font-weight: bolder !important;
        }
    </style>
}
@section Search{
    <div class="search_condition" id="divSearchCondition">
        <table class="tb_insert Fixed">
            <tr id="trSortingCenterSelect">
                <th>
                    运单号：
                </th>
                <td>
                    <input type="text" name="BillNo" id="txtBillNo" style="width: 100px;" />
                </td>
                <th>
                    标签号：
                </th>
                <td>
                    <input type="text" id="txtLabel" name="Label" />
                </td>
                <th>
                    封箱帖：
                </th>
                <td>
                    <input type="text" id="txtBoxLabel" name="BoxLabel" />
                </td>
                <th>
                    称重重量：
                </th>
                <td>
                    <input type="text" id="txtBillWeight" />
                </td>
                <th>
                    已称重数量：
                </th>
                <td>
                    <label id="lblCount" style="font-weight: bold" />
                </td>
            </tr>
        </table>
    </div>
}
@section list
{
    <div id="SearchResultList" class="DataGirdPanel">
        @{Html.RenderPartial("_PartialReturnBillSorting", Model); }
    </div>
}
