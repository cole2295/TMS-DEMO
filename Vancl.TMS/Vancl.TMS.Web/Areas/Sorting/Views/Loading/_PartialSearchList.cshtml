@model Vancl.TMS.Util.Pager.PagedList<Vancl.TMS.Model.Sorting.Loading.BillTruckBatchModel>
<div class="toolbar">
    <ul>
        <li class="toolbtn">@Ajax.ActionLink("刷新", "Search", null, (AjaxOptions)ViewBag.AjaxOptions, new { @class = "refresh", id = "btnBillTruckListRefresh" })
        </li>
    </ul>
</div>
<div class="tablelist">
    <table cellpadding="0" cellspacing="0" border="0" class="DataTable SingleSelect center"
        id="DataTableList">
        <thead>
            <tr>
                <th>
                    批次号
                </th>
                <th>
                    仓库
                </th>
                <th>
                    配送站
                </th>
                <th>
                    车牌号
                </th>
                <th>
                    单量
                </th>
                <th>
                    装车时间
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model == null || Model.Count == 0)
                {
                    Html.RenderPartial("_PartialDataTableEmptyRow", Model);
                }
                else
                {
                    for (int i = 0; i < Model.Count; i++)
                    {
                        var billTruckModel = Model[i];
                <tr class="@(i % 2 == 0 ? "odd" : "even")">
                    <td>
                        @billTruckModel.BatchNo
                    </td>
                    <td>
                        @billTruckModel.Warehouse
                    </td>
                    <td>
                        @billTruckModel.ArrivalName
                    </td>
                    <td>
                        @billTruckModel.TruckNo
                    </td>
                    <td>
                        @billTruckModel.TotalBillCount
                    </td>
                    <td>
                        @billTruckModel.LoadingTime
                    </td>
                </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>
@{
    ViewBag.UpdateTargetId = "SearchResultList";
    Html.RenderPartial("_PartialDataTableFootPager", Model);
}
