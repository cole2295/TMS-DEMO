@model Vancl.TMS.Util.Pager.PagedList<Vancl.TMS.Model.Sorting.WeighReview.WeighReviewViewModel>
<div class="toolbar">
 <ul>
 <li class="toolbtn">@Ajax.ActionLink("刷新", "WeighReview", null, (AjaxOptions)ViewBag.AjaxOptions, new { @class = "refresh", id = "btnWeighReviewListRefresh" })</li>
 </ul>
</div>
<div class="tablelist">
    <table cellpadding="0" cellspacing="0" border="0" class="DataTable SingleSelect"
        id="tblWeighReviewTable">
        <thead>
            <tr>
                <th>
                    序号
                </th>
                <th>
                    复核状态
                </th>
                <th>
                    订单号
                </th>
                <th>
                    运单号
                </th>
                <th>
                    员工编号
                </th>
                <th>
                    操作人
                </th>
                <th>
                    操作时间
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                foreach (var item in Model)
                {
                <tr>
                    <td>
                        @item.SortRowID
                    </td>
                    <td>
                        @Vancl.TMS.Util.EnumUtil.EnumHelper.GetDescription(item.WeighReviewStatus)
                    </td>
                    <td>
                        @item.CustomerOrder
                    </td>
                    <td>
                        @item.FormCode
                    </td>
                    <td>
                        @item.EmployeeCode
                    </td>
                    <td>
                        @item.OperatorName
                    </td>
                    <td>
                        @item.OperateTime
                    </td>
                </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" style="line-height: 120px;" class="center">
                        无数据显示....
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@{
    Html.RenderPartial("_PartialDataTableFootPager", Model);
}
